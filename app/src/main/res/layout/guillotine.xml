<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_userinfo"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_profile" />

        <university.huangyueran.polytechnic.com.libraryreservationassistant.ui.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="用户信息" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_changePwd"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <university.huangyueran.polytechnic.com.libraryreservationassistant.ui.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="修改密码" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity_active" />

        <university.huangyueran.polytechnic.com.libraryreservationassistant.ui.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="知识分享" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />

    <LinearLayout
        android:id="@+id/ll_logout"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings" />

        <university.huangyueran.polytechnic.com.libraryreservationassistant.ui.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="退出登录" />
    </LinearLayout>
</LinearLayout>